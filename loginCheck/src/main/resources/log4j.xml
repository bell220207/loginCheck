<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <!-- Appenders -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <!-- param name="Target" value="System.out" / -->
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %5p %m%n" />
        </layout>
    </appender>
	<appender name="dailyRollingFile" class="org.apache.log4j.DailyRollingFileAppender">
       	<param name="File" value="C:/chuckLog/loging.log" />
		<!-- 백업용 -->
<!--    		<param name="File" value="/app/weblogic/data/220518/loging.log" /> -->
        <param name="Append" value="true" />
        <param name="datePattern" value="'-'yyyy-MM-dd-HH'.log'" /> 
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %5p [%c:%L] %m%n" />
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %5p %C:%L %m%n" />
        </layout>
    </appender>
    
    <appender name="console-errorlog" class="org.apache.log4j.ConsoleAppender">
    	<param name="DatePattern" value="'-'yyyyMMdd HH24'.log'" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %5p %m%n" />
        </layout>
    </appender>
    
    <!-- Application Loggers -->
    <logger name="com.company.furence">
        <level value="info" />
        <appender-ref ref="dailyRollingFile" />
        <!-- appender-ref ref="console" / -->
    </logger>

    <!-- 특정 로거 설정 -->
    <logger name="org.springframework" additivity="false">
        <level value="error" />
        <appender-ref ref="console" />
    </logger>
    <!-- Query Loggers -->
    <logger name="jdbc.sqlonly" additivity="false">
        <level value="error"/>
        <!-- <appender-ref ref="dailyRollingFile"/> -->
        <appender-ref ref="console-errorlog"/>
    </logger>
    <logger name="jdbc.resultsettable" additivity="false">
        <level value="error"/>
        <appender-ref ref="console-errorlog"/>
    </logger>
    <!-- Root Logger -->
    <root>
        <priority value="off" />
        <appender-ref ref="console" />
    </root>
</log4j:configuration>